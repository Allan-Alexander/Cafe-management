<section class = "User">
    <h1 class = "User">Sign In</h1>
        <section class = "User-section">
            <%= form_with url: signin_path do |form|%>
                <div class = "User-Flex">
                    <p>User Name : </p>
                    <%= form.text_field :user_name, class: "UserForm-input"%>
                </div>
                <div class = "User-Flex">
                    <p>Password: </p>
                    <%= form.password_field :password, class: "UserForm-input-1" %>
                </div>
                <div class="btn">  
                    <%= form.submit "Sign-In", class: "btn btn-dark btn-lg" %>
                </div>
            <%end%>
        </section>
</section>      